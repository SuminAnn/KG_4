<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="GoodsDAO">
  
  	<!-- 상품리스트 목록 -->
  	<select id="selectGoods_list" parameterType="string" resultType="goods">
  		SELECT * FROM
  		TB_CATEGORY_GOODS
  		ORDER BY CATEGORY_GOODS_NO
  	</select>
  	
  	<!-- 상품리스트 총 DB  -->
	<select id="getGoods_cnt" resultType="string" >
	 	SELECT COUNT(*)
	 	FROM TB_CATEGORY_GOODS
	</select>
	
	<!-- 상품 상세페이지 -->
   <select id="getGoods_list_detail" resultType="goods">
     SELECT * FROM tb_category_goods where category_goods_name = '친환경 대파 250g';
   </select>
	
	
